<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
        
    <TextView
        android:id="@+id/roleview_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/roleview_name_textSize" />
    
    <TextView
        android:id="@+id/roleview_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roleview_name_textView"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/roleview_description_textSize" />

    <ImageView
        android:id="@+id/roleview_role_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roleview_description_textView"
        android:layout_centerHorizontal="true"
        android:onClick="onClickRoleImage"
        android:src="@drawable/villager_male" 
        android:contentDescription="@string/app_name" />
 
    <TextView
        android:id="@+id/roleview_message_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roleview_role_imageView"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/roleview_message_textSize" />
    
</RelativeLayout>

</ScrollView>